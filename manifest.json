{
  "manifest_version": 3,
  "name": "Time Tracking and Productivity Analytics",
  "version": "1.0",
  "description": "Tracks time spent on websites and provides productivity analytics.",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Productivity Tracker"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
